---
import { Image } from "astro:assets";
import logo from "../images/footerlogo.webp"
---

<footer class="bg-white">
  <div class="mx-auto w-full max-w-screen-xl p-4 py-6 lg:py-8">
      <div class="md:flex md:justify-between">
        <div class="mb-6 md:mb-0">
          <div class="flex items-center">
              <Image
              src={logo}
              alt="BioCoderDojo logo"
              class="me-3 "
              format="webp"
              />
          </div>
        </div>
        <div class="grid grid-cols-2 gap-8 sm:gap-6 sm:grid-cols-3">
            <div>
                <h2 class="mb-6 text-sm font-semibold text-gray-900 uppercase">Contact us</h2>
                <ul class="text-gray-500 font-medium">
                    <li class="mb-4">
                      <a href="https://www.facebook.com/radu.ticiu/?locale=ro_RO" class="hover:underline">Radu Ticiu</a>
                    </li>
                    <li class="mb-4">
                        <a href="mailto:radu.ticiu@gmail.com" class="hover:underline">radu.ticiu@gmail.com</a>
                    </li>
                    <li>
                        <a href="tel:+40722691279" class="hover:underline">+40 (722) 691 279</a>
                    </li>
                </ul>
            </div>
            <div>
                <h2 class="mb-6 text-sm font-semibold text-gray-900 uppercase">Follow us</h2>
                <ul class="text-gray-500 font-medium">
                    <li class="mb-4">
                        <a href="https://www.facebook.com/BioCoderDojoTimisoara/" class="hover:underline ">Facebook</a>
                    </li>
                </ul>
            </div>
            <div>
                <h2 class="mb-6 text-sm font-semibold text-gray-900 uppercase">Legal</h2>
                <ul class="text-gray-500 font-medium">
                    <li class="mb-4">
                        <a href="#" class="hover:underline">Privacy Policy</a>
                    </li>
                    <li>
                        <a href="#" class="hover:underline">Terms &amp; Conditions</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <hr class="my-6 border-gray-200 sm:mx-auto lg:my-8" />
    <div class="sm:flex sm:items-center sm:justify-between">
        <span class="text-sm text-gray-500 sm:text-center">© 2023. All Rights Reserved.
        </span>
        <div class="flex mt-4 sm:justify-center sm:mt-0">
          <a href="https://maps.app.goo.gl/P5ayhy54uWR1vhaf8" class="text-gray-500 hover:text-gray-900 dark:hover:text-white flex">
              <svg class="h-3 mt-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
              </svg>            
              <span class="ms-2">Bd. Mihai Viteazu, nr.1, Timișoara, România</span>
          </a>
        </div>
    </div>
  </div>
</footer>
